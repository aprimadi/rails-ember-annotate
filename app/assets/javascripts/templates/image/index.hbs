<div id="canvas" {{bind-attr style=canvasStyle}}>
  <img {{bind-attr src=fileUrl}}>
</div>
<div id="toolbar">
  <button type="button" class="btn btn-default btn-lg" data-toggle="tooltip" title="Highlight">
    <span class="glyphicon glyphicon-plus"></span>
  </button>
  <button type="button" class="btn btn-default btn-lg" data-toggle="tooltip" title="Annotate">
    <span class="glyphicon glyphicon-font"></span>
  </button>
</div>
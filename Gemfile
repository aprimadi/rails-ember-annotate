source 'https://rubygems.org'

gem 'rails', '4.1.0'

# Storage
gem 'mysql2'

# Serializer
gem 'active_model_serializers'

# Image processing
gem 'carrierwave'
gem 'carrierwave-mongomapper', github: 'frankpinto/carrierwave-mongomapper'
gem 'mini_magick'

# Fast, concurrent, threaded web server
gem 'puma'

gem 'less-rails'
gem 'uglifier', '>= 1.3.0'
gem 'coffee-rails', '~> 4.0.0'
gem 'therubyracer'

gem 'jquery-rails'
gem 'less-rails-bootstrap'
gem 'ember-rails'
gem 'ember-source', '1.5.1.1'

group :development do
  gem 'spring'
  gem 'quiet_assets'
  gem 'annotate'

  # Use Capistrano for deployment
  gem 'capistrano', '3.1.0'
  gem 'capistrano-rvm'
  gem 'capistrano-bundler'
  gem 'capistrano-rails'
  gem 'capistrano3-puma'
end
